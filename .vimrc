syntax on    
set number    
set splitbelow    
set splitright    
imap jj <Esc>      
hi DiffAdd      ctermfg=Yellow        ctermbg=Blue    
hi DiffChange   ctermfg=Yellow        ctermbg=Blue    
hi DiffDelete   ctermfg=Yellow        ctermbg=Blue    
hi DiffText     ctermfg=Yellow        ctermbg=Blue    
    
set matchpairs+=<:>    
set matchpairs+={:}    
set matchpairs+=(:)    
set matchpairs+=[:]    

set shiftwidth=4    " Indents will have a width of 4.
set softtabstop=4   " Sets the number of columns for a TAB.
set expandtab       " Expand TABs to spaces.
